<h2>Edit Media</h2>

<%= Thoth::MediaController.render_view('media', :file => @file) %>

<% if @media_error %>
  <div class="flash error"><%== @media_error %></div>
<% end %>

<fieldset class="replace">
  <legend>Replace File</legend>
  <%= Thoth::MediaController.render_view('form', :form_action => @form_action) %>
</fieldset>
