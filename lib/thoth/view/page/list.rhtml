<h2>Pages</h2>

<%= render_template('../pager') %>

<table class="list pages" summary="List of all pages">
  <%= render_template('../util/table_sortheader') %>
  <tfoot></tfoot>
  <tbody>
    <% row = 'even' %>
    <% @pages.all do |page| %>
      <tr class="<%= row == 'even' ? row = 'odd' : row = 'even' %>">
        <td class="name"><%= page.name %></td>
        <td class="title">
          <a href="<%= page.url %>"><%= h(page.title) %></a>
        </td>
        <td class="created">
          <%= page.created_at(Thoth::Config.timestamp.short) %>
        </td>
        <td class="updated">
          <%= page.updated_at(Thoth::Config.timestamp.short) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render_template('../pager') %>
